{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react-native",
    "outDir": "build",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "allowJs": true,
    "noUnusedLocals": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "build",
    "__tests__",
    "index.js",
    "app.js",
    "client.js",
    "coverage",
    "babel.config.js",
    "rn-cli.config.js",
    "metro.config.js"
  ]
}
